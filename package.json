{
  "name": "filterfox",
  "version": "1.0.0",
  "description": "A powerful and lightweight ad blocker Chrome extension",
  "main": "src/background.js",
  "scripts": {
    "build": "npm run clean && npm run copy && npm run minify",
    "clean": "rimraf dist/",
    "copy": "cpx2 \"src/**/*\" dist/src/ && cpx2 \"popup/**/*\" dist/popup/ && cpx2 \"styles/**/*\" dist/styles/ && cpx2 \"icons/**/*\" dist/icons/ && cpx2 \"rules/**/*\" dist/rules/ && cpx2 \"config/**/*\" dist/config/ && cpx2 \"manifest.json\" dist/",
    "minify": "npm run minify:js && npm run minify:css",
    "minify:js": "terser dist/src/*.js --compress --mangle --output-dir dist/src/ --replace && terser dist/popup/*.js --compress --mangle --output-dir dist/popup/ --replace",
    "minify:css": "cleancss -o dist/styles/popup.css dist/styles/popup.css && cleancss -o dist/styles/content.css dist/styles/content.css",
    "dev": "npm run copy && npm run watch",
    "watch": "chokidar \"src/**/*\" \"popup/**/*\" \"styles/**/*\" \"manifest.json\" -c \"npm run copy\"",
    "lint": "eslint src/ popup/ --ext .js",
    "lint:fix": "eslint src/ popup/ --ext .js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "pack": "npm run build && web-ext build --source-dir=dist/ --artifacts-dir=releases/",
    "pack:firefox": "npm run build && web-ext build --source-dir=dist/ --artifacts-dir=releases/ --filename=filterfox-firefox-{version}.zip",
    "pack:chrome": "npm run build && zip -r releases/filterfox-chrome-{version}.zip dist/",
    "build:chrome": "npm run build",
    "build:firefox": "npm run build",
    "build:edge": "npm run build",
    "build:production": "NODE_ENV=production npm run build",
    "test:chrome": "npm run test",
    "test:firefox": "npm run test", 
    "test:edge": "npm run test",
    "test:performance": "npm run test -- --testMatch='**/*.perf.test.js'",
    "analyze": "npm run build && bundlesize",
    "deploy:chrome": "echo 'Chrome deployment configured'",
    "deploy:firefox": "echo 'Firefox deployment configured'",
    "validate": "web-ext lint --source-dir=dist/",
    "serve": "npm run copy && web-ext run --source-dir=dist/ --browser-console",
    "serve:firefox": "npm run copy && web-ext run --source-dir=dist/ --target=firefox-desktop",
    "release": "npm run test && npm run lint && npm run build && npm run validate && npm run pack",
    "docker:build": "docker build -t filterfox-dev .",
    "docker:run": "docker run -it --rm -v $(pwd):/workspace filterfox-dev",
    "docker:test": "docker-compose up test",
    "format": "prettier --write \"src/**/*.js\" \"popup/**/*.js\" \"styles/**/*.css\" \"*.json\" \"*.md\"",
    "pre-commit": "npm run lint:fix && npm run format && npm run test",
    "install-hooks": "husky install",
    "prepare": "husky install"
  },
  "keywords": [
    "adblocker",
    "chrome-extension",
    "privacy",
    "security",
    "firefox-addon",
    "content-blocker",
    "tracker-blocker"
  ],
  "author": {
    "name": "FilterFox Team",
    "email": "team@filterfox.dev",
    "url": "https://filterfox.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tavybrown/filterfox.git"
  },
  "bugs": {
    "url": "https://github.com/tavybrown/filterfox/issues"
  },
  "homepage": "https://filterfox.dev",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "bundlesize": "^0.18.0",
    "chokidar-cli": "^3.0.0",
    "clean-css-cli": "^5.6.0",
    "cpx2": "^7.0.0",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5",
    "terser": "^5.20.0",
    "web-ext": "^7.8.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions"
  ],
  "webExt": {
    "sourceDir": "dist/",
    "artifactsDir": "releases/",
    "build": {
      "overwriteDest": true
    },
    "run": {
      "browserConsole": true,
      "startUrl": ["about:debugging#/runtime/this-firefox"]
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["jest-chrome/object"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "popup/**/*.js",
      "!src/injected.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "moduleFileExtensions": ["js", "json"],
    "verbose": true
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "prettier --write"],
    "*.css": ["prettier --write"],
    "*.{json,md}": ["prettier --write"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/tavybrown"
  }
}